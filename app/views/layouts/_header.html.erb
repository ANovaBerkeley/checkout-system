<header class="main-header">
  <!-- Logo -->
  <a href="<%= root_url %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
      <b>f</b>inv</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">
      <b>ANova Checkout System</b>
    </span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
  </nav>
</header>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag("anova.png", class: "img-circle") %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="<%= edit_user_path(current_user.id) %>">
          <i class="fa fa-edit"></i>
          Edit Profile</a>
        <a href="">
          <%= link_to destroy_user_session_path, method: :delete  do %>
          <i class="fa fa-sign-out"></i>Log Out
        <% end %>
        </a>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MAIN NAVIGATION</li>
      <li>
        <a href="<%= root_url %>">
          <i class="fa fa-home"></i>
          <span>Home Page</span>
        </a>
      </li>
      <li>
        <a href="<%= items_path %>">
          <i class="fa fa-search"></i>
          <span>Check Inventory</span>
        </a>
      </li>
      <li>
        <a href="<%= past_orders_path %>">
          <i class="fa fa-history"></i>
          <span>Past Orders</span>
        </a>
      </li>
      
      <li>
        <a href="<%= mentors_path %>">
          <i class="fa fa-users"></i>
          <span>Mentors Roster</span>
        </a>
      </li>
      
      <li>
        <a href="<%= scan_orders_path %>">
          <i class="fa fa-laptop"></i>
          <span>Checkout Laptop</span>
        </a>
      </li>
      <li>
        <a href="<%= rooms_path %>">
          <i class="fa fa-map-marker "></i>
          <span>Check In</span>
        </a>
      </li>
      <li class="treeview">
        <a href="#"><i class="fa fa-plus"></i> <span>Add</span>
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>
        <ul class="treeview-menu">
          <li>
            <a href=" <%= new_item_path %>">
              <i class="fa fa-search-plus"></i>
              <span>Add Item</span>
            </a>
          </li>
          <li>
            <a href="<%= new_student_path %>">
              <i class="fa fa-user-plus"></i>
              <span>Add Student</span>
            </a>
          </li>
          <li>
            <a href="<%= new_mentor_path %>">
              <i class="fa fa-user-plus"></i>
              <span>Add Mentor</span>
            </a>
          </li>
          <li>
            <a href="<%= new_room_path %>">
              <i class="fa fa-calendar-plus-o"></i>
              <span>Add Room</span>
            </a>
          </li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
