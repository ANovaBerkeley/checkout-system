<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          List of Checkins
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Checkin List</li>
        </ol>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">

              <!-- /.box-header -->
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Room/Workshop</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @checkins.each do |checkin| %>
                    <tr>
                      <td><%= checkin.student.name %></td>
                      <td><%= checkin.room.name %></td>
                      <td><%= link_to 'Delete', checkin, method: :delete, data: { confirm: 'Are you sure you want to delete this checkin?' } %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>

            <section class="content-header">
                <h1>
                    Generate Raffle Winner
                </h1>
            </section>
            <div class="box">
                    Hi this me
            </div>
          </div>
        </div>
      </section>
    </div>
    <%= render 'layouts/footer' %>
  </div>
  <script>
    $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false
      });
    });
  </script>
</body>
